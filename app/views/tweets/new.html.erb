
  <h1>ひとこと投稿<h1>
  <%= form_with(model: @tweet, url: user_tweets_path, local: true) do |f| %>
    <div>
      <%= f.text_field :hitokoto, placeholder: "ひとことを入力(30字以内）", autocomplete: 'off', maxlength: 30, class: "tweet-hitokoto" %>
    </div>

    <div>
      <p>プロフィール文</p>
      <%= f.text_area :profile, placeholder: "プロフィールを入力(1000字以内)", autocomplete: 'off', maxlength: 1000, class: "tweet-profile" %>
    </div>

    <div>
      <%= f.submit "投稿する", class: "tweet-submit" %>
    </div>
  <% end %>