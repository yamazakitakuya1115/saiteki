<h1>新規投稿ページ</h1>

<%= form_with(model: @article, url: articles_path, local: true) do |f| %>
  <%= render 'shared/error_messages', model: f.object %>

  <div class="field">
    <%= f.label '記事タイトル' %><br />
    <%= f.text_field :title, placeholder: '40文字まで', autofocus: true, maxlength: "40", autocomplete: 'off' %>
  </div>

  <div class="field">
    <%= f.label 'ひとこと説明' %><br />
    <%= f.text_field :description, placeholder: '20文字まで', maxlength: "20", autocomplete: 'off' %>
  </div>

  <div class="field">
    <%= f.label '学年' %><br />
    <%= f.collection_select(:grade_id, Grade.all, :id, :name, {}, {class:"select-box", id:"article-grade"}) %>
  </div>

  <div class="field">
    <%= f.label '教科' %><br />
    <%= f.collection_select(:subject_id, Subject.all, :id, :name, {}, {class:"select-box", id:"article-subject"}) %>
  </div>

  <div class="field">
    <%= f.label 'ジャンル' %>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"article-genre"}) %>
  </div>
  <div class="field">
    <%= f.label '記事内容' %><br />
    <%= f.text_area :content, placeholder: '1000文字まで', class: "article-content", maxlength: "1000" %>
  </div>

  <div class="field">
    <%= f.check_box :release %>
    <%= label_tag :release, "公開する（チェックを外すと非公開になります）"%>
  </div>

  <div class="actions">
    <%= f.submit "記事を投稿する" %>
  </div>

<% end %>